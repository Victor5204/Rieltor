<Window x:Class="Rieltor.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Авторизация" Height="200" Width="300">
    <Grid>
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
            <TextBlock Text="Логин" Margin="0,0,0,10"/>
            <TextBox x:Name="LoginTextBox"  Margin="0,0,0,10" Width="200" />
            <TextBlock Text="Пароль:" Margin="0,0,0,10"/>
            <PasswordBox x:Name="PasswordBox"  Margin="0,0,0,10" Width="200" />
            <Button Content="Войти" Click="LoginButton_Click" Width="100" />
        </StackPanel>
    </Grid>
</Window>
